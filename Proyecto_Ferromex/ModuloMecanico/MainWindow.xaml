        <Label x:Name="LBL_Nombre" Content="NOMBRE(s): " HorizontalAlignment="Right" Height="31" Margin="0,2,18,0" VerticalAlignment="Top" Width="89" Cursor="No" FontFamily="Arial" FontWeight="Bold" Foreground="Beige" Grid.Row="1" Grid.Column="1"/>
        <Label x:Name="LBL_App" Content="APELLIDO PATERNO: " HorizontalAlignment="Right" Height="31" Margin="0,33,18,0" VerticalAlignment="Top" Width="142" Cursor="No" FontFamily="Arial" FontWeight="Bold" Foreground="Beige" Grid.Row="1" Grid.Column="1"/>
        <Label x:Name="LBL_Apm" Content="APELLIDO MATERNO: " HorizontalAlignment="Right" Height="31" Margin="0,64,18,0" VerticalAlignment="Top" Width="142" Cursor="No" FontFamily="Arial" FontWeight="Bold" Foreground="Beige" Grid.Row="1" Grid.Column="1"/>


        <TextBox x:Name="TXT_App" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="Ingrese apellido paterno" Grid.Column="4" HorizontalAlignment="Left" Height="26" Margin="16,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264" Cursor="IBeam" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TXT_Apm" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="Ingrese apellido materno" Grid.Column="4" HorizontalAlignment="Left" Height="26" Margin="16,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264" Cursor="IBeam" Grid.Row="1" Grid.ColumnSpan="2"/>


        <GroupBox x:Name="groupBox" Header="Direccion" HorizontalAlignment="Left" Height="200" Margin="0,109,0,0" Grid.Row="1" VerticalAlignment="Top" Width="478" Foreground="LimeGreen" Grid.ColumnSpan="5" Grid.Column="1" Grid.RowSpan="2">
            <Grid HorizontalAlignment="Left" Height="168" Margin="0,4,0,0" VerticalAlignment="Top" Width="464">
                <Label x:Name="LBL_Ciudad" Content="CIUDAD: " HorizontalAlignment="Right" Height="31" Margin="0,18,354,0" VerticalAlignment="Top" Width="89" Cursor="No" FontFamily="Arial" FontWeight="Bold" Foreground="Beige" RenderTransformOrigin="0.742,0.774"/>
                <Label x:Name="LBL_Calle" Content="CALLE: " HorizontalAlignment="Right" Height="31" Margin="0,46,354,0" VerticalAlignment="Top" Width="89" Cursor="No" FontFamily="Arial" FontWeight="Bold" Foreground="Beige" RenderTransformOrigin="0.742,0.774"/>
                <Label x:Name="LBL_Numero" Content="NUMERO: " HorizontalAlignment="Right" Height="31" Margin="0,74,354,0" VerticalAlignment="Top" Width="89" Cursor="No" FontFamily="Arial" FontWeight="Bold" Foreground="Beige" RenderTransformOrigin="0.742,0.774"/>
                <Label x:Name="LBL_Colonia" Content="COLONIA: " HorizontalAlignment="Right" Height="31" Margin="0,102,354,0" VerticalAlignment="Top" Width="89" Cursor="No" FontFamily="Arial" FontWeight="Bold" Foreground="Beige" RenderTransformOrigin="0.742,0.774"/>
                <Label x:Name="LBL_CodPost" Content="C.P : " HorizontalAlignment="Right" Height="31" Margin="0,130,354,0" VerticalAlignment="Top" Width="89" Cursor="No" FontFamily="Arial" FontWeight="Bold" Foreground="Beige" RenderTransformOrigin="0.742,0.774"/>


                <TextBox x:Name="TXT_Ciudad" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="Ingrese la ciudad donde donde vive el mécanico" HorizontalAlignment="Left" Height="23" Margin="153,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="301" Cursor="IBeam"/>
                <TextBox x:Name="TXT_Calle" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="Ingrese calle donde vive" HorizontalAlignment="Left" Height="23" Margin="153,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="263" Cursor="IBeam"/>
                <TextBox x:Name="TXT_Numero" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="Ingrese numero de casa" HorizontalAlignment="Left" Height="23" Margin="153,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" Cursor="IBeam"/>
                <TextBox x:Name="TXT_Colonia" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="Ingrese colonia" HorizontalAlignment="Left" Height="23" Margin="153,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157" Cursor="IBeam"/>
                <TextBox x:Name="TXT_CodPost" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="Ingrese cod. postal" HorizontalAlignment="Left" Height="23" Margin="153,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157" Cursor="IBeam"/>


            </Grid>
        </GroupBox>
        <TextBox x:Name="TXT_Nombre" Grid.Column="4" HorizontalAlignment="Left" Height="26" Margin="16,2,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="264" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="Ingrese nombre o nombres del mecánico" Grid.ColumnSpan="2"/>
        <Label x:Name="LBL_Curp" Content="CURP: " HorizontalAlignment="Right" Height="31" Margin="0,9,47,0" VerticalAlignment="Top" Width="90" Cursor="No" FontFamily="Arial" FontWeight="Bold" Foreground="Beige" Grid.Row="1" RenderTransformOrigin="0.186,0.645" Grid.Column="6"/>
        <Label x:Name="LBL_RFC" Content="RFC: " HorizontalAlignment="Right" Height="31" Margin="0,40,47,0" VerticalAlignment="Top" Width="90" Cursor="No" FontFamily="Arial" FontWeight="Bold" Foreground="Beige" Grid.Row="1" RenderTransformOrigin="0.186,0.645" Grid.Column="6"/>
        <Label x:Name="LBL_FNacimiento" Content="FECHA-NACIMIENTO: " HorizontalAlignment="Right" Height="31" Margin="0,71,217,0" VerticalAlignment="Top" Width="142" Cursor="No" FontFamily="Arial" FontWeight="Bold" Foreground="Beige" Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="2"/>
        <Label x:Name="LBL_Telefono" Content="TELEFONO: " HorizontalAlignment="Right" Height="31" Margin="0,102,47,0" VerticalAlignment="Top" Width="90" Cursor="No" FontFamily="Arial" FontWeight="Bold" Foreground="Beige" Grid.Row="1" Grid.Column="6"/>
        <TextBox x:Name="TXT_Curp" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="Ingrese la Curp" Grid.Column="7" HorizontalAlignment="Left" Height="26" Margin="10,9,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" Cursor="IBeam" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TXT_Rfc" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="Ingrese RFC" Grid.Column="7" HorizontalAlignment="Left" Height="26" Margin="10,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" Cursor="IBeam" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TXT_FNacim" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="Ingrese fecha de nacimiento " Grid.Column="7" HorizontalAlignment="Left" Height="26" Margin="10,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" Cursor="IBeam" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TXT_Telef" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="Ingrese telefono" Grid.Column="7" HorizontalAlignment="Left" Height="26" Margin="10,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" Cursor="IBeam" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Menu x:Name="menu" Height="54" Margin="80,173,0,0" Grid.Row="2" VerticalAlignment="Top" Grid.Column="4" Grid.ColumnSpan="4" ClipToBounds="True" Cursor="Hand" HorizontalAlignment="Left" Width="532">
            <Button Height="45" Width="96" Click="Button_Click" x:Name="BTN_add" Foreground="#FF321010" BorderBrush="#FF321010" OpacityMask="#FF321010" ClipToBounds="True" Cursor="Hand">
                <Button.Background>
                    <ImageBrush ImageSource="/Proyecto_Ferromex;component/img/new2.ico" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Button Margin="0,0,0,-1" Width="90" Content="" Click="Button_Click_2" x:Name="BTN_save">
                <Button.Background>
                    <ImageBrush ImageSource="/Proyecto_Ferromex;component/img/save.ico" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Button Margin="0,0,0,-1" Width="90" Click="Button_Click_3" x:Name="BTN_refresh">
                <Button.Background>
                    <ImageBrush ImageSource="/Proyecto_Ferromex;component/img/refresh.ico" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Button Margin="0,0,0,-1" Width="94" x:Name="BTN_delete" Click="BTN_delete_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/Proyecto_Ferromex;component/img/delete.ico" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Button Margin="0,0,0,-1" Width="80" Click="Button_Click_4" x:Name="BTN_search">
                <Button.Background>
                    <ImageBrush ImageSource="/Proyecto_Ferromex;component/img/search2.ico"/>
                </Button.Background>
            </Button>
        </Menu>


    </Grid>
</Window>
